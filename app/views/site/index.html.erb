<h1>Welcome to VisualRest!</h1>

<p><i>...the content follows the person, instead of the person being forced to follow content...</i></p>

<div id="fblike" style="margin-bottom: 50px; margin-top: 30px;">
<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
<fb:like></fb:like>
</div>

<%if session[:username]%>
<div id=addnews>
  <%= render :partial => "addnews" %>
</div>
<%end%>



<div class="news">
<% @news.each do |n| %>
  <div class="<%= cycle('odd', 'even') %>">
     <span id="newsid"><%= n.created_at.strftime("%d/%m") %><br/><i>by <%=n.user.username%></i></span><p id="leftdesc"><%=n.description%></p>
  </div>
<% end %>
</div>



